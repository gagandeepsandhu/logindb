<Window x:Class="logindb.loginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:logindb"
        mc:Ignorable="d"
        Title="loginWindow" Height="550" Width="900" FontSize="14" Background="MediumAquamarine">
    <Border  Background="Black" Margin="20" CornerRadius="20">
        <StackPanel Margin="25,9,25,41">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="username" Foreground="White" FontSize="18"></Label>
            <TextBox Name="txtusername" Background="Chocolate" Foreground="White" FontSize="18"></TextBox>
            <Label Content="Password" Foreground="White" FontSize="18"></Label>
            <PasswordBox Name="txtpassword" Background="Chocolate" Foreground="White" FontSize="18"></PasswordBox>
            <Button Name="btnSubmit" Click="BtnSubmit_OnClick" Content="Submit" FontSize="18" Margin="60 10" Background="Chocolate"/>
        </StackPanel>
    </Border>
</Window>
